# MELCloud credentials
MELCLOUD_USERNAME=your_email@example.com
MELCLOUD_PASSWORD=your_password

# Home Assistant configuration
HASS_URL=http://your-homeassistant:8123
HASS_TOKEN=your_long_lived_access_token

# Energy prices
ELECTRICITY_PRICE=0.28  # per kWh in your currency
DIESEL_PRICE=1.50       # per liter in your currency
DIESEL_EFFICIENCY=0.85  # efficiency factor

# Database
DATABASE_PATH=app/db/energy_data.db

# Flask settings
SECRET_KEY=your_secret_key_here
DEBUG=True
